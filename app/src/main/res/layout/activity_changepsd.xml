<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.whereareyounow.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.administrator.whereareyounow.activity.ChangepwdActivity">

    <include
        android:id="@+id/shouye"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="0.1"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/grayFive">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码"
            android:textSize="15sp"
            android:textColor="@color/Treeblack"
            android:layout_marginLeft="12dp"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:textCursorDrawable="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText"
            android:background="@color/grayFive"
            android:hint="请输入原密码"
            android:textColor="@color/grayEleven"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_marginLeft="53dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/grayFive" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="15sp"
            android:textColor="@color/Treeblack"
            android:layout_marginLeft="12dp"
            android:id="@+id/textView12"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:textCursorDrawable="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText2"
            android:background="@color/grayFive"
            android:hint="请输入新密码"
            android:textColor="@color/grayEleven"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_marginLeft="53dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/grayFive" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:id="@+id/textView13"
            android:layout_centerVertical="true"
            android:textColor="@color/Treeblack"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:textCursorDrawable="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/editText3"
            android:background="@color/grayFive"
            android:hint="请输入新密码"
            android:textColor="@color/grayEleven"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_marginLeft="53dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView13"
            android:layout_toEndOf="@+id/textView13" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码由6-20个英文字母、数字或符号组成"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="12dp"
            android:textColor="@color/grayten"
            android:textSize="12sp"
            android:id="@+id/textView14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#f02b2b"
            android:padding="15dp"
            android:textSize="12sp"
            android:id="@+id/forgetpwd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</com.example.administrator.whereareyounow.view.PercentLinearLayout>
