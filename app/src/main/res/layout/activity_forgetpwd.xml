<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.whereareyounow.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.whereareyounow.activity.ForgetpwdActivity">
    <include
        android:id="@+id/shouye"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="0.1"></include>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        app:layout_widthPercent="0.8"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_forgetpwd"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/username"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView17" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:hint="请输入手机号"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#b4b4b4"
            android:id="@+id/editText4" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        app:layout_widthPercent="0.8"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_forgetpwd"
        android:layout_gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView18" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入新密码"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#b4b4b4"
            android:id="@+id/editText5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        app:layout_widthPercent="0.8"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_forgetpwd"
        android:layout_gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/password"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView19" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入新密码"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:inputType="textPassword"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#b4b4b4"
            android:id="@+id/editText6" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        app:layout_widthPercent="0.8"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_forgetpwd"
        android:layout_gravity="center" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageView20" />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="请输入手机验证码"
            android:background="@null"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:textColor="#b4b4b4"
            android:id="@+id/editText7" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="#d6d7dc"
                android:layout_marginRight="14dp"
                android:id="@+id/textView15"
                android:layout_alignTop="@+id/tv_sendmessage"
                android:layout_toLeftOf="@+id/tv_sendmessage"
                android:layout_toStartOf="@+id/tv_sendmessage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:layout_gravity="center"
                android:textColor="@color/yellowOne"
                android:layout_marginRight="14dp"
                android:id="@+id/tv_sendmessage"
             />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        app:layout_widthPercent="0.8"
        android:layout_height="40dp"
        android:text="确定"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/white"
        android:background="@drawable/button_confirm_shape"
        android:id="@+id/button" />
</com.example.administrator.whereareyounow.view.PercentLinearLayout>
