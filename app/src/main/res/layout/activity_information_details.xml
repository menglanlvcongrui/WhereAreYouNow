<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.whereareyounow.view.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.whereareyounow.activity.InformationDetailsActivity">
    <include
        android:id="@+id/shouye"
        layout="@layout/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="0.1"></include>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
       <TextView
           android:text="   丢失的小孩 在这里登记丢失的小孩,让更多的好心人看到并一起寻找. 网友提供的线索 在这里可以看到好心人提供的线索,增加寻找的机会. 我们提供资源 我们寻亲平台也会."
           android:lineSpacingExtra="10dp"
           android:textColor="@color/Treeblack"
           android:textSize="@dimen/text_size_three"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/wang_yuan"
            android:layout_height="115dp" />
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/li_yi_feng"
            android:layout_height="115dp" />
        <ImageView
            android:layout_marginLeft="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/yu_yang_qian_xi"
            android:layout_height="115dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="33dp"
            android:src="@drawable/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="7dp"
            android:layout_marginTop="40dp"
            android:text="园区东平街299号欧瑞大厦"
            android:textColor="@color/Treeblack"
            android:textSize="@dimen/text_size_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.example.administrator.whereareyounow.view.PercentLinearLayout>
