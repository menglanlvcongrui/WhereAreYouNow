                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="电话："
                        android:textColor="@color/Treeblack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:text="13222358682|13211234567"
                        android:textColor="@color/Treeblack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/time1"
                        android:text="2016/09/21"
                        android:textColor="@color/grayten"
                        android:textSize="@dimen/text_size_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/time1"
                        android:text="15:12:22"
                        android:textColor="@color/grayten"
                        android:textSize="@dimen/text_size_five"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <FrameLayout
                        android:layout_toLeftOf="@+id/love1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true">

                        <ImageView
                            android:id="@+id/shopping_trolley1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/talk" />

                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_marginBottom="16dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/red_circle"
                            android:text="1"
                            android:gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_six" />
                    </FrameLayout>
                    <ImageView
